<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="420dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/bg_data"
    app:cardUseCompatPadding="true"
    tools:context=".ui.Center.VersionUpActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/updateUp_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_close_24dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="371dp"
            android:layout_height="370dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@mipmap/update_bg" />

        <TextView
            android:id="@+id/tv_old_version"
            style="@style/text_black"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="152dp"
            android:layout_marginEnd="281dp"
            android:text="v1.0" />

        <TextView
            android:id="@+id/tv_service_check"
            style="@style/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="143dp"
            android:layout_marginEnd="32dp"
            android:text="在线升级" />

        <TextView
            android:id="@+id/tv_new_version"
            style="@style/text_black"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="155dp"
            android:layout_marginTop="68dp"
            android:text="v1.1" />

        <TextView
            android:id="@+id/tv_update_title"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/about_close"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="应用更新" />

        <TextView
            style="@style/text"
            android:id="@+id/tv_update_newVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_new_version"
            android:layout_marginStart="20dp"
            android:text="最新版本" />

        <TextView
            style="@style/text"
            android:id="@+id/tv_update_newSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_update_title"
            android:layout_marginTop="90dp"
            android:text="新版本大小" />

        <TextView
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_update_title"
            android:layout_marginTop="130dp"
            android:text="更新内容" />

        <TextView
            style="@style/text"
            android:id="@+id/tv_update_newFunction"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_update_title"
            android:layout_marginTop="152dp"
            android:text=".修复部分网络下载任务冲突的BUG" />

        <TextView
            android:id="@+id/tv_updateUp_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_update_title"
            android:layout_marginBottom="20dp"
            android:text="以后再说"
            android:textColor="@color/thirdColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_update_up"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/tv_updateUp_back"
            android:layout_alignEnd="@+id/updateUp_close"
            android:background="@drawable/bt_update_up"
            android:text="立即更新"
            android:textColor="@color/white" />
    </RelativeLayout>

</android.support.v7.widget.CardView>