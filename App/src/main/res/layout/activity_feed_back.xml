<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Center.FeedBackActivity">

    <android.support.v7.widget.CardView
        android:layout_width="800dp"
        android:layout_height="500dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/bg_data"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/iv_feed_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_close_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TableRow
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_local_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/et_feed_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_bg_edit_2"
                        android:hint="主题(*必填)"
                        android:padding="3dp"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="top|center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_mail_2_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/et_feed_content"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/selector_bg_edit_2"
                        android:hint="内容"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:padding="3dp"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_phone_in_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/et_feed_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_bg_edit_2"
                        android:hint="联系方式"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:padding="3dp"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_location_2_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/et_feed_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_bg_edit_2"
                        android:hint="联系地址"
                        android:inputType="textPostalAddress"
                        android:padding="3dp"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <com.example.library.ProgressButton.circular.CircularProgressButton
                android:id="@+id/bt_feed_up"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_up"
                app:cpb_cornerRadius="40dp"
                app:cpb_textComplete="提交成功"
                app:cpb_textError="提交失败"
                app:cpb_textIdle="确定" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>