<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BottomNavigationView">
        <!-- If text will be enabled for the tabs, defaulted to true -->
        <attr name="bnv_with_text" format="boolean" />
        <!-- If there will be a shadow on the view, default is true -->
        <attr name="bnv_shadow" format="boolean" />
        <!-- If the view should be set up for a tablet, default is false -->
        <attr name="bnv_tablet" format="boolean" />
        <!-- Disable or enable the background color, default is true -->
        <attr name="bnv_colored_background" format="boolean" />
        <!-- If a supplied ViewPager will have a slide animation, default is true -->
        <attr name="bnv_viewpager_slide" format="boolean" />
        <!-- Text size for the active tab, default size is 14sp -->
        <attr name="bnv_active_text_size" format="dimension" />
        <!-- Text size for an inactive tab, default size is 12sp -->
        <attr name="bnv_inactive_text_size" format="dimension" />
        <!-- The color of an activated tab. Will only be considered if bnv_colored_background is false, no default is set -->
        <attr name="bnv_active_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MaterialSearchBar">
        //Base
        <attr name="mt_speechMode" format="boolean"/>
        <attr name="mt_maxSuggestionsCount" format="integer"/>
        <attr name="mt_navIconEnabled" format="boolean"/>
        <attr name="mt_roundedSearchBarEnabled" format="boolean"/> //(API 21+ , Will Revert To Default Shape On Lower
        <attr name="mt_menuDividerEnabled" format="boolean"/>
        <attr name="mt_dividerColor" format="color"/>
        <attr name="mt_searchBarColor" format="color"/>

        //Icons
        <attr name="mt_menuIconDrawable" format="reference"/>
        <attr name="mt_searchIconDrawable" format="reference"/>
        <attr name="mt_speechIconDrawable" format="reference"/>
        <attr name="mt_backIconDrawable" format="reference"/>
        <attr name="mt_clearIconDrawable" format="reference"/>
        <attr name="mt_navIconTint" format="color"/>
        <attr name="mt_menuIconTint" format="color"/>
        <attr name="mt_searchIconTint" format="color"/>
        <attr name="mt_backIconTint" format="color"/>
        <attr name="mt_clearIconTint" format="color"/>
        <attr name="mt_navIconUseTint" format="boolean"/>
        <attr name="mt_menuIconUseTint" format="boolean"/>
        <attr name="mt_searchIconUseTint" format="boolean"/>
        <attr name="mt_backIconUseTint" format="boolean"/>
        <attr name="mt_clearIconUseTint" format="boolean"/>
        <attr name="mt_borderlessRippleEnabled" format="boolean"/>

        //Text
        <attr name="mt_hint" format="string"/>
        <attr name="mt_placeholder" format="string"/>
        <attr name="mt_textColor" format="color"/>
        <attr name="mt_hintColor" format="color"/>
        <attr name="mt_placeholderColor" format="color"/>
        <attr name="mt_textCursorTint" format="color"/>
        <attr name="mt_leftTextSelectorDrawable" format="reference"/>
        <attr name="mt_middleTextSelectorDrawable" format="reference"/>
        <attr name="mt_rightTextSelectorDrawable" format="reference"/>
        <attr name="mt_leftTextSelectorTint" format="color"/>
        <attr name="mt_middleTextSelectorTint" format="color"/>
        <attr name="mt_rightTextSelectorTint" format="color"/>
        <attr name="mt_handlesTintEnabled" format="boolean"/>
        <attr name="mt_highlightedTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="MaterialSearchView">
        <attr name="searchBackground" format="integer" />
        <attr name="searchVoiceIcon" format="integer" />
        <attr name="searchCloseIcon" format="integer" />
        <attr name="searchBackIcon" format="integer" />
        <attr name="searchSuggestionBackground" format="integer" />
        <attr name="historyIcon" format="integer" />
        <attr name="suggestionIcon" format="integer" />
        <attr name="listTextColor" format="integer" />
        <attr name="searchBarHeight" format="dimension"  />
        <attr name="voiceHintPrompt" format="string" />
        <attr name="android:fitsSystemWindows"/>
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
        <attr name="android:inputType"/>
    </declare-styleable>

    <declare-styleable name="AnimatedCircleLoadingView">
        <attr name="animCircleLoadingView_mainColor" format="color" localization="suggested" />
        <attr name="animCircleLoadingView_secondaryColor" format="color" localization="suggested" />
        <attr name="animCircleLoadingView_checkMarkTintColor" format="color" localization="suggested" />
        <attr name="animCircleLoadingView_failureMarkTintColor" format="color" localization="suggested" />
        <attr name="animCircleLoadingView_textColor" format="color" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="CheckBox_Sample">
        <attr name="size" format="dimension" />
        <attr name="color_border" format="color" />
        <attr name="color_background" format="color" />
    </declare-styleable>

    <declare-styleable name="MaterialTextField">
        <attr name="mtf_cardCollapsedHeight" format="dimension"/>
        <attr name="mtf_labelColor" format="color"/>
        <attr name="mtf_image" format="reference"/>
        <attr name="mtf_hasFocus" format="boolean"/>
        <attr name="mtf_animationDuration" format="integer"/>
        <attr name="mtf_openKeyboardOnFocus" format="boolean"/>
        <attr name="mtf_backgroundColor" format="color"/>
    </declare-styleable>

</resources>